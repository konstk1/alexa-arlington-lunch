{
    "compilerOptions": {
      /* Base Options: */
      "esModuleInterop": true,
      "skipLibCheck": true,
      "target": "ES2018",
      "resolveJsonModule": true,
      "moduleDetection": "force",
      "isolatedModules": true,
  
      /* Strictness */
      "strict": true,
      "noUncheckedIndexedAccess": true,
  
      /* Bundled projects */
      "lib": ["es2018"],
      "module": "commonjs",
      "incremental": true,
  
      /* Path Aliases */
      "rootDir": ".",
      "outDir": "./dist",
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "types": ["jest", "node"]
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["node_modules"]
  }
  